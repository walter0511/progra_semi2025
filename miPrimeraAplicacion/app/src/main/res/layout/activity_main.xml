<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- TAB 1: Cálculo de pago de agua -->
            <LinearLayout
                android:id="@+id/tabPagoAgua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consumo de agua en m³:"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtConsumo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Ingrese el consumo"/>

                <Button
                    android:id="@+id/btnCalcularAgua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calcular"/>

                <TextView
                    android:id="@+id/txtResultadoAgua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado:"
                    android:textSize="18sp"
                    android:paddingTop="10dp"/>
            </LinearLayout>

            <!-- TAB 2: Conversor de Área -->
            <LinearLayout
                android:id="@+id/tabConversorArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrese el valor a convertir:"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtValorArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Valor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unidad de entrada:"
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinnerEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unidad de salida:"
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spinnerSalida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnConvertirArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Convertir"/>

                <TextView
                    android:id="@+id/txtResultadoArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado:"
                    android:textSize="18sp"
                    android:paddingTop="10dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</TabHost>